      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch  -->
      <icon src="www/images/beecalc060px.png" width="60" height="60" />
      <icon src="www/images/beecalc120px.png" width="120" height="120" />
      <!-- iPad -->
      <icon src="www/images/beecalc076px.png" width="76" height="76" />
      <icon src="www/images/beecalc152px.png" width="152" height="152" />

      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
      <icon src="www/images/beecalc040px.png" width="40" height="40" />
      <icon src="www/images/beecalc080px.png" width="80" height="80" />
